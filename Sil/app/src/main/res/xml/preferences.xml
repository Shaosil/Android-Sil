			 android:title="Modifiers and Movers"
			 android:summary="Esc, Ctrl, Shift, Alt, Space, Tab, Enter, Directions">
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.downkey" android:title="Arrow Down"/>
