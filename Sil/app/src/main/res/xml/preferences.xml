				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.percentkey" android:title="Percent %"/>
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.periodkey" android:title="Period ."/>
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.pipekey" android:title="Pipe |"/>
