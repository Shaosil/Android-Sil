<?xml version="1.0" encoding="UTF-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:seekBar="http://schemas.android.com/apk/res-auto">
	<PreferenceCategory android:title="@string/game_category">
		<Preference android:title="Game Profile"
					android:key="angband.gameprofile">
			<intent android:action="com.gmail.ShaosilDev.Sil.PROFILES" />
		</Preference>
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/display_category">
		<ListPreference
			android:key="angband.font"
			android:defaultValue="0"
			android:title="@string/preferences_font_title"
			android:entries="@array/fontDescriptions"
			android:entryValues="@array/fonts" />
		<CheckBoxPreference
			 android:key="angband.vibrate"
			 android:defaultValue="false"
			 android:title="@string/preferences_vibrate_title"
			 android:summary="@string/preferences_vibrate_summary" />
		<CheckBoxPreference
			 android:key="angband.fullscreen"
			 android:defaultValue="true"
			 android:title="@string/preferences_fullscreen_title"
			 android:summary="@string/preferences_fullscreen_summary" />
		<ListPreference
			 android:key="angband.orientation"
			 android:defaultValue="0"
			 android:title="@string/preferences_orientation_title"
			 android:entries="@array/orientationDescriptions"
			 android:entryValues="@array/orientations" />
	</PreferenceCategory>
	<PreferenceCategory android:title="@string/control_category">
		<CheckBoxPreference
			android:key="angband.allowKeyboardOverlap"
			android:defaultValue="true"
			android:title="@string/preferences_keyboardOverlap_title"
			android:summary="@string/preferences_keyboardOverlap_summary" />
		<com.gmail.ShaosilDev.Sil.SeekBarPreference
			android:key="angband.keyboardOpacity"
		  android:title="Keyboard Opacity"
			seekBar:min="0"
			seekBar:max="100"
		  seekBar:defaultVal="50" />
		<PreferenceScreen
			 android:title="Hardware Key Mapping"
			 android:summary="Configure hardware buttons on your device to perform various functions">
			<PreferenceScreen
			 android:title="Display Functions"
			 android:summary="Change display, font size, virtual keyboard">
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.virtkeykey" android:title="Toggle Virtual Keyboard"/>
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.zoominkey" android:title="Zoom In"/>
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.zoomoutkey" android:title="Zoom Out"/>
			</PreferenceScreen>
			<PreferenceScreen
			 android:title="Letters and Numbers"
			 android:summary="A-Z, 0-9">
				<com.gmail.ShaosilDev.Sil.KeyMapPreference android:key="angband.akey" android:title="A"/>
